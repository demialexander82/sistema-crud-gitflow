{
    "name": "tu-usuario/crud-gitflow",
    "description": "Proyecto CRUD con Git Flow",
    "type": "project",
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR12 src tests",
        "fix-style": "phpcbf -p --standard=PSR12 src tests"
    }
}
